{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "composite": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "../engine-pinia"
    },
  ],
  "typedocOptions": {
    "readme": "../docs/engine/ui-components-index.md",
    "out": "../docs/engine/static/apiref/ui-components",
    "gaID": "UA-107473046-3",
    "excludePrivate": true,
    "plugin": [
      "typedoc-plugin-vue"
    ],
    "validation": {
      "invalidLink": true
    }
  }
}
